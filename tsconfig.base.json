{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "ES2018"],
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "useDefineForClassFields": true
  },
  "include": ["src"]
}
